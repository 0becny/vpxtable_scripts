Function Vol(ball) ' Calculates the Volume of the sound based on the ball speed
    Vol = Csng(BallVel(ball) ^2 / 200)
End Function

Function Pan(ball) ' Calculates the pan for a ball based on the X position on the table. "table1" is the name of the table
    Dim tmp
    tmp = ball.x * 2 / table1.width-1
    If tmp > 0 Then
        Pan = Csng(tmp ^10)
    Else
        Pan = Csng(-((- tmp) ^10) )
    End If
End Function

Function Pitch(ball) ' Calculates the pitch of the sound based on the ball speed
    Pitch = BallVel(ball) * 20
End Function

Function BallVel(ball) 'Calculates the ball speed
    BallVel = INT(SQR((ball.VelX ^2) + (ball.VelY ^2) ) )
End Function

Function RndNum(min,max)
 RndNum = Int(Rnd()*(max-min+1))+min     ' Sets a random number between min AND max
End Function

Function ShuffleArray(MyArray())		'Shuffle an array, sorting the elements randomly
    Dim I, J, Temp
    For I = LBound(MyArray) To UBound(MyArray)
		Randomize
        J = CLng(((UBound(MyArray) - I) * Rnd) + I)
        If I <> J Then
            Temp = MyArray(I)
            MyArray(I) = MyArray(J)
            MyArray(J) = Temp
        End If
    Next
End Function

Function RemoveArrayElement(ByVal MyArray, ByVal Item)		'removes an item from an array
  Dim S, N
  S = ""
  For N = LBound(MyArray) To UBound(MyArray)
    If StrComp(MyArray(N), Item, vbTextCompare) <> 0 Then
      If S <> "" Then
        S = S & vbTab & MyArray(N)
      Else
        S = MyArray(N)
      End If
    End If
  Next
  RemoveArrayElement = Split(S, vbTab)
End Function

