Sub BlinkMe
	Dim dbsteps:dbsteps=bstart(xx)-1
	Controller.B2SSetData B2Sdata(xx), dbsteps MOD 2
	bstart(xx)=bstart(xx)+1
	If B2Sduration(xx)>0 Then
		B2SCase(xx)=B2SCase(xx)+1
		If B2SCase(xx)>=B2Sduration(xx)/B2SInterval(xx) Then
			If NOT B2Sfstate(xx)=2 Then
				StopFlashB2S B2Sdata(xx),B2Sfstate(xx)
				B2SLampState(xx)=B2Sfstate(xx)
			Else		'recover previous state
				If tempState(xx)<>1 Then
					StopFlashB2S B2Sdata(xx),B2SLampState(xx)
				Else
					StopFlashB2S B2Sdata(xx),B2SLampState(xx)
					FlashB2S B2Sdata(xx),-1,250,1
				End If
			End If
		End If
	Else
		B2SCase(xx)=0
	End If
End Sub

